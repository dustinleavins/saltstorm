<div class='page-header'>
  <h1><%= titleize('Buy Stuff') %></h1>
  <p><%= @site_description %></p>
</div>
<div class='main-content' ng-show='ready()'>
  <div class='row'>
    <div class='col-md-6'>
      <h2>Upgrade Rank</h2>
      <p>Current rank: {{ currentRank }}</p>
      <div class='alert alert-danger' ng-show='insufficientFunds'>
        <p>Insufficient Funds &#9785;</p>
      </div>
      <p ng-show='atMaxRank()'>You are already at the highest rank allowed by the server.</p>

      <form name='rankupForm'
            ng-submit='rankup()'
            ng-hide='atMaxRank()'>
        <div class='form-group'>
          <p>
            <label for='amount'>Amount</label>
            <input type='text' name='amount' autocapitalize='off' class='form-control'
                   readonly
                   ng-model='amount'
                   required />
          </p>
        </div>
        <p>
          <button type="submit" class="btn btn-default">Upgrade Rank</button>
        </p>
      </form>

    </div>
  </div>
  <div class='row col-md-12'>
    <p class='text-center'><a class='btn btn-default' href='/#main'>Main</a></p>
  </div>
</div>


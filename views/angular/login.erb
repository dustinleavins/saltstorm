<div class='page-header'>
  <h1><%= titleize('Login') %></h1>
  <p><%= @site_description %></p>
</div>
<div class='alert alert-danger' role='alert' ng-show='errorMsg'>
  <p>{{ errorMsg }}</p>
</div>
<div class='row'>
  <div class='col-md-6'>
    <form name='loginForm'>
      <div class='form-group' ng-class='{"has-error": loginForm.email.$invalid}'>
        <p>
          <label for='email'>E-Mail Address</label>
          <input type='text' name='email' class='form-control'  autocapitalize='off'
                 required
                 ng-model='email' />
        </p>
      </div>

      <div class='form-group' ng-class='{"has-error": loginForm.password.$invalid}'>
        <p>
          <label for='password' >Password</label>
          <input type='password' name='password' autocapitalize='off' class='form-control'
                 required
                 ng-model='password' />
        </p>
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox" name='mobile' ng-model='goToMobile' /> Go to mobile version
        </label>
      </div>
      <p>
        <button ng-click='login()' ng-disabled='loginForm.$invalid' class="btn btn-primary">Login</button>
      </p>
    </form>
  </div>
</div>

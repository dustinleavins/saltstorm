<div class='page-header'>
  <h1><%= titleize('Request Password Reset') %></h1>
  <p><%= @site_description %></p>
</div>
<form action='/request_password_reset' method='post' name='requestForm'>
  <div class='form-group' ng-class='{"has-error": requestForm.email.$invalid}'>
    <p>
      <label for='email'>E-Mail Address</label>
      <input type='text' name='email' class='form-control'  autocapitalize='off'
             required
             ng-model='email' />
    </p>
  </div>
  <p>
    <button type="submit" class="btn btn-default">Request Password Reset</button>
  </p>
</form>

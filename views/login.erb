<div class='container'>
  <div class='page-header'>
    <h1><%= @site_name %></h1>
    <p><%= @site_description %></p>
  </div>
  <form action='/login' method='post' name='loginForm'>
    <div class='form-group' ng-class='{"has-error": loginForm.email.$invalid}'>
      <p>
        <label for='email'>E-Mail Address</label>
        <input type='text' name='email' class='form-control'  autocapitalize='off'
               required
               ng-model='email' />
      </p>
    </div>

    <div class='form-group' ng-class='{"has-error": loginForm.password.$invalid}'>
      <p>
        <label for='password' >Password</label>
        <input type='password' name='password' autocapitalize='off' class='form-control'
               required
               ng-model='password' />
      </p>
    </div>
    <p>
      <button type="submit" class="btn btn-default">Login</button>
    </p>
  </form>
  <footer>
    <p>This site is powered by Sandstorm &copy; 2013 Dustin Leavins</p>
    <p>Site might use <a href='http://glyphicons.com/'>Glyphicons</a></p>
  </footer>
</div>
